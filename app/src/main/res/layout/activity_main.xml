<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainViewId"
    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/backgroundofviewid"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hanuman1"
        app:layout_constraintBottom_toTopOf="@+id/backgroundimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ViewFlipper
        android:id="@+id/flippermain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="832dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman7" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman8"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman9"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman10"/>

        <ImageView
            android:id="@+id/moortiID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman2"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman3"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman4"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman5"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hanuman6"/>

    </ViewFlipper>


    <Button
        android:id="@+id/share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/sharebuttonbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundimage"
        app:layout_constraintVertical_bias="0.779" />

    <ImageView
        android:id="@+id/pillarborderID"
        android:src="@drawable/borderwithmaala"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageView
        android:id="@+id/backgroundimage"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:background="@drawable/bigred"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />



    <ImageView
        android:id="@+id/borderofbackground"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:background="@drawable/bordersmall"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />




    <Button
        android:id="@+id/prevbutton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/prevsongbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playpausebutton"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/backgroundimage"
        app:layout_constraintTop_toTopOf="@+id/backgroundimage"
        app:layout_constraintVertical_bias="0.367" />

    <Button
        android:id="@+id/playpausebutton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/playbuttonbg"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songNameId"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/nextsongbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/playpausebutton"
        app:layout_constraintTop_toTopOf="@+id/backgroundimage"
        app:layout_constraintVertical_bias="0.367" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ourorange"
        android:progressBackgroundTint="@android:color/black"
        android:progressTint="@color/ourorange"
        android:thumbTint="@color/ourorange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playpausebutton"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/songNameId"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/songname1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundimage"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/lyricbutton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/lyricbuttonbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/lefttextID"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:text="left"
        android:textColor="@color/ourorange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/righttextID"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/righttextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:textColor="@color/ourorange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.0" />



    <Button
        android:id="@+id/aartiButtonId"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/aartibuttonbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.222" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4562123278832586/8806151974"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flippermain">

    </com.google.android.gms.ads.AdView>
    <!-- Sample banner ID: ca-app-pub-3940256099942544/6300978111 -->

</androidx.constraintlayout.widget.ConstraintLayout>




